<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_centerInParent="true">

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="vertical"
                      android:background="#ffffff"
                      android:gravity="center_vertical">

            <TextView android:id="@+id/title"
                      android:text="退出应用"
                      android:textSize="20dp"
                      android:textColor="#33c1c2"
                      android:layout_margin="10dp"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"/>

            <View  android:layout_height="1px"
                   android:layout_margin="5dp"
                   android:layout_width="match_parent"
                   android:background="#33c1c2" />

            <TextView android:id="@+id/content"
                      android:text="您是否确认退出应用？"
                      android:textSize="15dp"
                      android:layout_marginLeft="10dp"
                      android:layout_marginRight="10dp"
                      android:layout_marginBottom="10dp"
                      android:gravity="center"
                      android:layout_width="match_parent"
                      android:layout_height="80dp"/>

            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content">

                <Button android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/login_btn_login"
                        android:textColor="#ffffff"
                        android:onClick="OnBtnCancel"
                        android:textSize="15dp"
                        android:text="取消"
                        android:layout_weight="1"
                        android:id="@+id/btnCancel"/>

                <Button android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/login_btn_register"
                        android:textColor="#ffffff"
                        android:onClick="OnBtnOk"
                        android:textSize="15dp"
                        android:text="确定"
                        android:layout_weight="1"
                        android:id="@+id/btnOk"/>

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>
</RelativeLayout>

