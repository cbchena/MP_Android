<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_centerInParent="true">

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="vertical"
                      android:background="#ffffff"
                      android:gravity="center_vertical">

            <TextView android:id="@+id/title"
                      android:text="选择地点类型"
                      android:textSize="30dp"
                      android:textColor="#33c1c2"
                      android:layout_margin="10dp"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"/>

            <View  android:layout_height="1px"
                   android:layout_margin="5dp"
                   android:layout_width="match_parent"
                   android:background="#33c1c2" />

            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="match_parent"
                          android:orientation="vertical">

                <LinearLayout android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:orientation="horizontal">

                    <LinearLayout android:layout_width="wrap_content"
                                  android:layout_height="wrap_content"
                                  android:gravity="center"
                                  android:orientation="vertical"
                                  android:layout_weight="1">

                        <ImageButton android:layout_width="50dp"
                                     android:layout_height="50dp"
                                     android:id="@+id/btnHome"
                                     android:onClick="OnBtnChoose"
                                     android:background="@drawable/tab_home_check"/>

                        <TextView android:layout_width="match_parent"
                                  android:layout_height="wrap_content"
                                  android:gravity="center"
                                  android:textSize="20dp"
                                  android:text="家"/>

                    </LinearLayout>

                    <LinearLayout android:layout_width="wrap_content"
                                  android:layout_height="wrap_content"
                                  android:gravity="center"
                                  android:orientation="vertical"
                                  android:layout_weight="1">

                        <ImageButton android:layout_width="50dp"
                                     android:layout_height="50dp"
                                     android:id="@+id/btnCompany"
                                     android:onClick="OnBtnChoose"
                                     android:background="@drawable/tab_me_check"/>

                        <TextView android:layout_width="match_parent"
                                  android:layout_height="wrap_content"
                                  android:gravity="center"
                                  android:textSize="20dp"
                                  android:text="公司"/>

                    </LinearLayout>

                    <LinearLayout android:layout_width="wrap_content"
                                  android:layout_height="wrap_content"
                                  android:gravity="center"
                                  android:orientation="vertical"
                                  android:layout_weight="1">

                        <ImageButton android:layout_width="50dp"
                                     android:layout_height="50dp"
                                     android:id="@+id/btnTraffic"
                                     android:onClick="OnBtnChoose"
                                     android:background="@drawable/tab_home_check"/>

                        <TextView android:layout_width="match_parent"
                                  android:layout_height="wrap_content"
                                  android:gravity="center"
                                  android:textSize="20dp"
                                  android:text="交通"/>

                    </LinearLayout>

                    <LinearLayout android:layout_width="wrap_content"
                                  android:layout_height="wrap_content"
                                  android:gravity="center"
                                  android:orientation="vertical"
                                  android:layout_weight="1">

                        <ImageButton android:layout_width="50dp"
                                     android:layout_height="50dp"
                                     android:id="@+id/btnCatering"
                                     android:onClick="OnBtnChoose"
                                     android:background="@drawable/tab_home_check"/>

                        <TextView android:layout_width="match_parent"
                                  android:layout_height="wrap_content"
                                  android:gravity="center"
                                  android:textSize="20dp"
                                  android:text="餐饮"/>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:orientation="horizontal">

                    <LinearLayout android:layout_width="wrap_content"
                                  android:layout_height="wrap_content"
                                  android:gravity="center"
                                  android:orientation="vertical"
                                  android:layout_weight="1">

                        <ImageButton android:layout_width="50dp"
                                     android:layout_height="50dp"
                                     android:id="@+id/btnShopping"
                                     android:onClick="OnBtnChoose"
                                     android:background="@drawable/tab_home_check"/>

                        <TextView android:layout_width="match_parent"
                                  android:layout_height="wrap_content"
                                  android:gravity="center"
                                  android:textSize="20dp"
                                  android:text="购物"/>

                    </LinearLayout>

                    <LinearLayout android:layout_width="wrap_content"
                                  android:layout_height="wrap_content"
                                  android:gravity="center"
                                  android:orientation="vertical"
                                  android:layout_weight="1">

                        <ImageButton android:layout_width="50dp"
                                     android:layout_height="50dp"
                                     android:id="@+id/btnMeet"
                                     android:onClick="OnBtnChoose"
                                     android:background="@drawable/tab_friend_check"/>

                        <TextView android:layout_width="match_parent"
                                  android:layout_height="wrap_content"
                                  android:gravity="center"
                                  android:textSize="20dp"
                                  android:text="聚会"/>

                    </LinearLayout>

                    <LinearLayout android:layout_width="wrap_content"
                                  android:layout_height="wrap_content"
                                  android:gravity="center"
                                  android:orientation="vertical"
                                  android:layout_weight="1">

                        <ImageButton android:layout_width="50dp"
                                     android:layout_height="50dp"
                                     android:id="@+id/btnMotion"
                                     android:onClick="OnBtnChoose"
                                     android:background="@drawable/tab_home_check"/>

                        <TextView android:layout_width="match_parent"
                                  android:layout_height="wrap_content"
                                  android:gravity="center"
                                  android:textSize="20dp"
                                  android:text="运动"/>

                    </LinearLayout>

                    <LinearLayout android:layout_width="wrap_content"
                                  android:layout_height="wrap_content"
                                  android:gravity="center"
                                  android:visibility="invisible"
                                  android:layout_weight="1">

                        <ImageButton android:layout_width="50dp"
                                     android:layout_height="50dp"
                                     android:background="@drawable/tab_home_check"/>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>
</RelativeLayout>

